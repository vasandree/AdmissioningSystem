@model Common.Models.Models.Dtos.PagedDtos.PagedUserDto

<h1>User List</h1>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Email</th>
            <!-- Add more columns as needed -->
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.Users)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.FullName</td>
                <td>@user.Email</td>
                <!-- Add more columns as needed -->
            </tr>
        }
    </tbody>
</table>

<nav aria-label="Page navigation">
    <ul class="pagination">
        @for (int i = 1; i <= Model.Pagination.Count; i++)
        {
            <li class="page-item @(Model.Pagination.Current == i ? "active" : "")">
                <a class="page-link" href="@Url.Action("Users", new { page = i, pageSize = Model.Pagination.Size })">@i</a>
            </li>
        }
    </ul>
</nav>