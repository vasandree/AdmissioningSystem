{
  "openapi": "3.0.3",
  "info": {
    "title": "Manager Panel 1.0",
    "description": "",
    "version": "1.1.0"
  },
  "tags": [
    {
      "name": "AdmissionManaging"
    },
    {
      "name": "ManagingManagers"
    }
  ],
  "paths": {
    "/admissions": {
      "get": {
        "tags": [
          "AdmissionManaging"
        ],
        "summary": "Get all admissions",
        "parameters": [
          {
            "name": "ApplicantName",
            "in": "query",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "Programme",
            "in": "query",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "Faculty",
            "in": "query",
            "schema": {
              "type": "array",
              "items": {
                "type": "string",
                "description": "Select multiple faculties",
                "example": "FacultyId"
              }
            }
          },
          {
            "name": "Status",
            "in": "query",
            "schema": {
              "$ref": "#/components/schemas/AdmissionStatus"
            }
          },
          {
            "name": "noManager",
            "in": "query",
            "schema": {
              "type": "boolean"
            }
          },
          {
            "name": "my",
            "in": "query",
            "schema": {
              "type": "boolean"
            }
          },
          {
            "name": "createSorting",
            "in": "query",
            "schema": {
              "$ref": "#/components/schemas/CreateSortings"
            }
          }
        ],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "A list of admissions",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Admission"
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad request"
          },
          "401": {
            "description": "Unauthorized"
          },
          "403": {
            "description": "Forbidden"
          },
          "500": {
            "description": "InternalServerError"
          }
        }
      }
    },
    "/manager/{AdmissionId}": {
      "post": {
        "tags": [
          "AdmissionManaging"
        ],
        "summary": "Take applicant's admission",
        "parameters": [
          {
            "name": "AdmissionId",
            "in": "path",
            "description": "Admission ID",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Admission taken successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Response"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request"
          },
          "401": {
            "description": "Unauthorized"
          },
          "403": {
            "description": "Forbidden"
          },
          "500": {
            "description": "InternalServerError"
          }
        }
      },
      "delete": {
        "tags": [
          "AdmissionManaging"
        ],
        "summary": "Put back applicant's admiossion",
        "parameters": [
          {
            "name": "AdmissionId",
            "in": "path",
            "description": "Admission ID",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Admission put back successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Response"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request"
          },
          "401": {
            "description": "Unauthorized"
          },
          "403": {
            "description": "Forbidden"
          },
          "500": {
            "description": "InternalServerError"
          }
        }
      }
    },
    "/managers": {
      "get": {
        "tags": [
          "ManagingManagers"
        ],
        "summary": "Get all managers",
        "parameters": [
          {
            "name": "role",
            "in": "query",
            "schema": {
              "$ref": "#/components/schemas/ManagerRoles"
            }
          }
        ],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Admission appointed  successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Manager"
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad Request"
          },
          "401": {
            "description": "Unauthorized"
          },
          "403": {
            "description": "Forbidden"
          },
          "500": {
            "description": "InternalServerError"
          }
        }
      }
    },
    "/headManager/{AdmissionId}": {
      "patch": {
        "tags": [
          "AdmissionManaging"
        ],
        "summary": "Appoint an admission to manager",
        "parameters": [
          {
            "name": "AdmissionId",
            "in": "path",
            "description": "Admission ID",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "managerId": {
                    "type": "string",
                    "format": "uuid"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Admission appointed  successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Response"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request"
          },
          "401": {
            "description": "Unauthorized"
          },
          "403": {
            "description": "Forbidden"
          },
          "500": {
            "description": "InternalServerError"
          }
        }
      }
    },
    "/manager": {
      "post": {
        "tags": [
          "ManagingManagers"
        ],
        "summary": "Creates manager or head manager",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string",
                    "format": "email"
                  },
                  "faculty": {
                    "type": "string",
                    "format": "uuid"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Manager created successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Response"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request"
          },
          "401": {
            "description": "Unauthorized"
          },
          "403": {
            "description": "Forbidden"
          },
          "500": {
            "description": "InternalServerError"
          }
        }
      }
    },
    "/manager/{ManagerId}": {
      "get": {
        "tags": [
          "ManagingManagers"
        ],
        "summary": "Get manager's info",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "ManagerId",
            "in": "path",
            "description": "Manager ID",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Got manager info successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Manager"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request"
          },
          "401": {
            "description": "Unauthorized"
          },
          "403": {
            "description": "Forbidden"
          },
          "500": {
            "description": "InternalServerError"
          }
        }
      },
      "put": {
        "tags": [
          "ManagingManagers"
        ],
        "summary": "Change manager's info",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "ManagerId",
            "in": "path",
            "description": "Manager ID",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/EditManager"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Changed manager info successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Response"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request"
          },
          "401": {
            "description": "Unauthorized"
          },
          "403": {
            "description": "Forbidden"
          },
          "500": {
            "description": "InternalServerError"
          }
        }
      },
      "delete": {
        "tags": [
          "ManagingManagers"
        ],
        "summary": "Delete manager",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "ManagerId",
            "in": "path",
            "description": "Manager ID",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Manager deleted successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Response"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request"
          },
          "401": {
            "description": "Unauthorized"
          },
          "403": {
            "description": "Forbidden"
          },
          "500": {
            "description": "InternalServerError"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Response": {
        "type": "object",
        "properties": {
          "status": {
            "type": "string"
          },
          "message": {
            "type": "string"
          }
        }
      },
      "AdmissionStatus": {
        "type": "string",
        "enum": [
          "created",
          "underConsideration",
          "confirmed",
          "rejected",
          "closed"
        ]
      },
      "CreateSortings": {
        "type": "string",
        "enum": [
          "CreateDesc",
          "CreateAsc"
        ]
      },
      "Admission": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "applicantId": {
            "type": "string",
            "format": "uuid"
          },
          "status": {
            "$ref": "#/components/schemas/AdmissionStatus"
          },
          "programme": {
            "$ref": "#/components/schemas/EducationProgramModel"
          }
        }
      },
      "EducationLevelModel": {
        "required": [
          "id",
          "name"
        ],
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int32"
          },
          "name": {
            "type": "string",
            "minLength": 1
          }
        },
        "additionalProperties": false
      },
      "EducationProgramModel": {
        "required": [
          "createTime",
          "educationForm",
          "educationLevel",
          "faculty",
          "id",
          "language",
          "name"
        ],
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "createTime": {
            "type": "string",
            "format": "date-time"
          },
          "name": {
            "type": "string",
            "minLength": 1
          },
          "code": {
            "type": "string",
            "nullable": true
          },
          "language": {
            "type": "string",
            "minLength": 1
          },
          "educationForm": {
            "type": "string",
            "minLength": 1
          },
          "faculty": {
            "$ref": "#/components/schemas/FacultyModel"
          },
          "educationLevel": {
            "$ref": "#/components/schemas/EducationLevelModel"
          }
        },
        "additionalProperties": false
      },
      "FacultyModel": {
        "required": [
          "createTime",
          "id",
          "name"
        ],
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "createTime": {
            "type": "string",
            "format": "date-time"
          },
          "name": {
            "type": "string",
            "minLength": 1
          }
        },
        "additionalProperties": false
      },
      "ManagerRoles": {
        "type": "string",
        "enum": [
          "manager",
          "headManager"
        ]
      },
      "Manager": {
        "required": [
          "id",
          "email",
          "fullName",
          "faculty"
        ],
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "fullName": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "faculty": {
            "type": "string",
            "format": "uuid"
          }
        }
      },
      "EditManager": {
        "type": "object",
        "properties": {
          "fullName": {
            "type": "string"
          },
          "faculty": {
            "type": "string",
            "format": "uuid"
          }
        }
      }
    },
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer"
      }
    }
  }
}